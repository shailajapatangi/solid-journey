<%


String cid =(String) request.getParameter("linkstr");
String name="";
String phone="";
String address="";
    try{
        Class.forName("com.mysql.jdbc.Driver");
        String url     = "jdbc:mysql://localhost:3306/project1";
        String user    = "root";
        String pass    = "password";
        Connection con = DriverManager.getConnection(url, user, pass);
        Statement stmt = con.createStatement();
        String sql     = "SELECT * FROM temptable WHERE id = "+cid;
        ResultSet rs   = stmt.executeQuery(sql);

        while(rs.next()){
             cid     = rs.getString("id");	
             name    = rs.getString("name");
             phone   = rs.getString("phone");
             address =  rs.getString("address");			
        }
	
        con.close();
	
  } catch(Exception e){
      System.out.println(e);
  }

%>	

<body>
<form action="update.jsp">
<input type="hidden" name="cid" value="<%=cid%>">
<table class="gridtable">
    <tr>
     <td></td>  <td><a href="index.jsp">Back to Customer List</a></td>
    </tr>
	
    <tr>
     <th>ID</th>  <td><%=cid%></td>
    </tr>
    <tr>
     <th>Name</th> <td><%=name%></td>
    </tr>
    <tr>
     <th>Phone</th>  <td><input type="text" name="phone" value="<%=phone%>"></td>
    </tr>
    <tr>
     <th>Address</th>  <td><input type="text" name="address" value="<%=address%>"></td>
    </tr>

	<tr>
